{
  "name": "@uncover/js-utils-microfrontend",
  "version": "1.0.9",
  "author": "aSH <ash.uncover@gmail.com>",
  "description": "Util project for micro frontends management",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ash-uncover/js-utils-microfrontend"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bundles/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run build:tsc & npm run build:bundle",
    "build:bundle": "webpack --config webpack.config.build.js --mode production",
    "build:docs": "npm i && concurrently \"npm:build:docs:*\"",
    "build:docs:main": "webpack --mode production --config webpack.config.docs.main.js",
    "build:docs:child": "webpack --mode production --config webpack.config.docs.child.js",
    "build:tsc": "tsc",
    "start": "npm i && concurrently \"npm:start:*\"",
    "start:main": "webpack serve --progress --mode development --config webpack.config.docs.main.js",
    "start:messages": "webpack serve --progress --mode development --config webpack.config.docs.messages.js",
    "start:plugins": "webpack serve --progress --mode development --config webpack.config.docs.plugins.js",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --collectCoverage"
  },
  "dependencies": {
    "@uncover/js-utils": "^0.0.12",
    "@uncover/js-utils-logger": "^0.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@reduxjs/toolkit": "^1.9.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react-dom": "^18.0.10",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "i18next": "^22.4.8",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-chained-backend": "^4.2.0",
    "i18next-http-backend": "^2.1.1",
    "i18next-resources-to-backend": "^1.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "node-fetch": "^3.3.0",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.4",
    "react-router-dom": "^6.6.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
