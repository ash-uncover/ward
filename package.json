{
  "name": "@uncover/ward",
  "version": "1.0.0",
  "author": "aSH <ash.uncover@gmail.com>",
  "description": "Ward micro frontends frameworks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ash-uncover/ward"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bundles/**/*",
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run build:tsc & npm run build:bundle",
    "build:bundle": "webpack --config webpack.config.build.cjs --mode production",
    "build:schemas": "npm run build:tsc & node ./bin/ward-json-schemas",
    "build:tsc": "tsc -p tsconfig.build.json",
    "postinstall": "npm update @uncover/js-utils @uncover/js-utils-logger",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --collectCoverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@uncover/js-utils": "ash-uncover/js-utils",
    "@uncover/js-utils-logger": "ash-uncover/js-utils-logger",
    "ajv": "8.17.1"
  },
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@babel/preset-env": "7.26.9",
    "@reduxjs/toolkit": "2.6.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.0",
    "babel-loader": "10.0.0",
    "concurrently": "9.1.2",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "json-schema-to-typescript": "15.0.4",
    "node-fetch": "3.3.2",
    "ts-jest": "29.3.1",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "webpack": "5.98.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.1"
  }
}
